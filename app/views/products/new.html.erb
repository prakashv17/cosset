
<div class="row ">
	<h1>Enter a new Product</h1>
	<div class="col-md-6">
		<%= simple_form_for @product do |f| %>
		  <%= f.input :brand_name %>
		  <%= f.input :name %>
		  <%= f.input :price %>
		  <%= f.input :image %>
		  <br />
		  <%= f.submit :'Create', class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>